//PUT /member-mysql-logs
{
  "analysis": {
    "tokenizer": {
      "my_nori_tokenizer": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed",
        "discard_punctuation": "false"
      }
    },
    "filter": {
      "my_stop_filter": {
        "type": "stop",
        "stopwords": [
          " "
        ]
      }
    },
    "analyzer": {
      "my_nori_analyzer": {
        "type": "custom",
        "tokenizer": "my_nori_tokenizer",
        "filter": [
          "lowercase",
          "stop",
          "my_stop_filter",
          "nori_part_of_speech"
        ],
        "char_filter": [
          "html_strip"
        ]
      }
    }
  }
}

